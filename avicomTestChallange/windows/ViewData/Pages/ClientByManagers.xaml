<Page x:Class="avicomTestChallange.windows.ViewData.Pages.ClientByManagers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:avicomTestChallange.windows.ViewData.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientByManagers" Loaded="Page_Loaded">

    <Grid Background="White">
        <DataGrid x:Name="grid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding name}" Header="Менеджер" Width="600"/>
                <DataGridTextColumn Binding="{Binding count}" Header="Колличество клиентов" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
